<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plane_in_clouds"
    tools:context="com.example.flightsimulatorandroidapp.MainActivity">

    <Button
        android:id="@+id/url1"
        android:layout_width="297dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="LocalHost1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/url2"
        android:layout_width="297dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="LocalHost2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/url1" />

    <Button
        android:id="@+id/url3"
        android:layout_width="297dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="LocalHost3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/url2" />

    <Button
        android:id="@+id/url4"
        android:layout_width="297dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="LocalHost4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/url3" />

    <Button
        android:id="@+id/url5"
        android:layout_width="297dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="LocalHost5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/url4" />

    <Button
        android:id="@+id/inputURL"
        android:layout_width="220dp"
        android:layout_height="59dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="180dp"
        android:text="Type URL..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/url5" />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="121dp"
        android:layout_height="59dp"
        android:layout_marginTop="180dp"
        android:text="@string/connect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toEndOf="@+id/inputURL"
        app:layout_constraintTop_toBottomOf="@+id/url5"
        tools:visibility="visible" />




</androidx.constraintlayout.widget.ConstraintLayout>